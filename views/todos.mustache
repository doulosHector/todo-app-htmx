<div class="flex justify-center">
  <ul class="bg-gray-900 rounded-lg shadow-lg p-6 space-y-4 w-full max-w-md">
    {{#todos}}
    <li class="flex items-center justify-between space-x-3 text-blue-300 hover:text-blue-200 transition-colors duration-200 {{#completed}}opacity-50{{/completed}}">
      <div class="flex items-center space-x-3">
        <span class="w-4 h-4 border-2 {{#completed}}bg-blue-500{{/completed}} border-blue-500 rounded-full cursor-pointer" hx-put="/api/todos/{{id}}/toggle" hx-target="#todos"></span>
        <span class="text-lg {{#completed}}line-through{{/completed}}">{{ task }}</span>
      </div>
      <button class="text-red-500 hover:text-red-400 transition-colors duration-200" hx-delete="/api/todos/{{id}}" hx-target="#todos">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    </li>
    {{/todos}}
  </ul>
</div>
